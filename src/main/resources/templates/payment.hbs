<script src="js/mustache.min.js"></script>
<script type="text/javascript">
    var source = $("#totalTem").html();
    var totalTem = Handlebars.compile(source);

    var menuArray = new Array();
    var totalCount = 0;

    for(var i = 0; i < sessionStorage.length; i++){
        menuArray[i] = JSON.parse(sessionStorage.getItem(sessionStorage.key(i)));
        totalCount += menuArray[i].count * menuArray[i].price;
        delete menuArray[i].img;
        sessionStorage.setItem(sessionStorage.key(i), JSON.stringify(menuArray[i]));
    }

    var tot = {
        total: totalCount
    }
    $('#total').append(totalTem(tot));
</script>
